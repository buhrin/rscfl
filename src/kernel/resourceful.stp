probe kernel.function("blk_finish_plug").call
{
  if (should_acct()) {
    blk_e = get_cycles();
  }
}

probe kernel.function("blk_finish_plug").return
{
  if (should_acct()) {
    blk += get_cycles() - blk_e;
  }
}

